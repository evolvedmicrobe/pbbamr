PKG_CPPFLAGS =	-I../inst/include/  --std=c++11 -Wno-unused-local-typedefs -L/usr/lib  -lz -lm -lpbbam -Lpbbam/ -lhts -Lhtslib/
CXX_STD = CXX11
# pbbam must appear before hts in order to work on GCC
PKG_LIBS= -lpbbam -lhts -Lpbbam/ -Lhtslib/
.PHONY: htslib  pbbam

all : $(SHLIB)

$(SHLIB) : htslib pbbam

htslib:
	(cd htslib; make lib-static; cd ..)
	echo "building"

pbbam:
	(cd pbbam;	make)



